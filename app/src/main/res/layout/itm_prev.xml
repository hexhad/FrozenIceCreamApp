<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_margin="40dp"
    android:background="@drawable/all_corner_24_white"
    android:orientation="vertical"
    android:paddingTop="50dp"
    android:paddingBottom="50dp">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/itm_img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/img_pro_pic"
            app:riv_border_color="#EAEDF4"
            app:riv_border_width="3dp"
            app:riv_corner_radius="100dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/itm_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loyal Customer"
                android:textColor="@color/blue"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/itm_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="Welcome to Frozen Family"
                android:textColor="#4D517C"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/itm_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="Price"
                android:textColor="@color/blue"
                android:textSize="18sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_buy"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:backgroundTint="@color/blue"
                android:text="Buy"
                android:layout_marginRight="5dp"/>

            <com.google.android.material.button.MaterialButton
                android:layout_marginLeft="5dp"
                android:id="@+id/btn_cancel"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="Cancel"
                android:textColor="@color/blue" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>