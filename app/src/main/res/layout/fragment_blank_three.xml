                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add ingredients usings below buttons"
                    android:visibility="invisible" />
            </LinearLayout>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:weightSum="2"
                android:background="@drawable/main_cards_white"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                        android:id="@+id/btn_spoon_frag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:backgroundTint="#EAEDF4"
                        android:elevation="0dp"
                        android:text="Base"
                        android:visibility="invisible"
                        app:elevation="0dp"
                        app:icon="@drawable/ic_add"
                        app:strokeColor="@color/blue"
                        app:strokeWidth="1dp">

                    </com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton>

                    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                        android:id="@+id/btn_mixin_frag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:backgroundTint="#EAEDF4"
                        android:elevation="0dp"
                        android:text="Mix In"
                        android:visibility="invisible"
                        app:elevation="0dp"
                        app:icon="@drawable/ic_add"
                        app:strokeColor="@color/blue"
                        app:strokeWidth="1dp">

                    </com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton>


                    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                        android:id="@+id/btn_topping_frag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:backgroundTint="#EAEDF4"
                        android:elevation="0dp"
                        android:text="Topping"
                        android:visibility="invisible"
                        app:elevation="0dp"
                        app:icon="@drawable/ic_add"
                        app:strokeColor="@color/blue"
                        app:strokeWidth="1dp">

                    </com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton>

                    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                        android:id="@+id/btn_sauce_frag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:backgroundTint="#EAEDF4"
                        android:elevation="0dp"
                        android:text="Sause"
                        android:visibility="invisible"
                        app:elevation="0dp"
                        app:icon="@drawable/ic_add"
                        app:strokeColor="@color/blue"
                        app:strokeWidth="1dp">

                    </com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton>
                </LinearLayout>

            </HorizontalScrollView>


