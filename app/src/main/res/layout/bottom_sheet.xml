<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheetCont"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:paddingBottom="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="50dp"
        android:background="@drawable/title_layout_bg"
        android:gravity="center"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/blue"
                android:paddingBottom="20dp"
                android:text="Settings"
                android:textSize="20dp"
                android:textStyle="bold" />

            <View
                android:backgroundTint="@color/blue"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginBottom="5dp"
                android:background="@android:color/darker_gray" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/layoutOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal"
            android:weightSum="5">

            <ImageView
                android:id="@+id/image_Viewd"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="4"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:src="@drawable/ic_form_editing" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:text="Edit Profile" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutthree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal"
            android:weightSum="5">

            <ImageView
                android:id="@+id/image_Viewd3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="4"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:src="@drawable/ic_feedback" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:text="Feedback" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layouttwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal"
            android:weightSum="5">

            <ImageView
                android:id="@+id/image_Viewd2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="4"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:src="@drawable/ic_info" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:text="About" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutfour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal"
            android:weightSum="5">

            <ImageView

                android:id="@+id/image_plce"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="4"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:src="@drawable/ic_store" />

            <TextView
                android:id="@+id/textplce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:text="Location" />


        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:id="@+id/btn_btn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/blue"
            android:text="Log Out" />


    </LinearLayout>

</LinearLayout>